{
  "name": "ROS2 + Gazebo",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "runArgs": [
    "--gpus", "all",
    "--env", "DISPLAY=${env:DISPLAY}",
    "--env", "QT_X11_NO_MITSHM=1",
    "--volume", "/tmp/.X11-unix:/tmp/.X11-unix",
    "--network", "host"
  ],
  "mounts": [
    "source=${localWorkspaceFolder},target=/root/ros2_gazebo_ws,type=bind"
  ],
  "workspaceFolder": "/root/ros2_gazebo_ws",
  "remoteUser": "root",
  "postCreateCommand": "source /opt/ros/humble/setup.bash && colcon build || true",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-iot.vscode-ros",
        "ms-azuretools.vscode-docker",
        "ms-python.python"
      ]
    }
  }
}
